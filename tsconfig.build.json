{
	"extends": "./tsconfig.json",
	"exclude": ["node_modules", "test", "**/*.spec.ts"],
	"include": ["src/**/*"],
	"compilerOptions": {
	  "outDir": "dist",
	  "noEmit": false,
	  "sourceMap": false,
	  "removeComments": true,
	  "moduleResolution": "node",
	  "esModuleInterop": true,
	  "allowJs": false,
	  "target": "es2020",
	  "module": "commonjs",
	}
  }