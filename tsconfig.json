{
	"compilerOptions": {
	  "module": "commonjs",
	  "esModuleInterop": true,
	  "target": "es6",
	  "moduleResolution": "node",
	  "sourceMap": true,
	  "experimentalDecorators": true,
	  "emitDecoratorMetadata": true,
	  "strict": true,
	  "noImplicitAny": true,
	  "declaration": true,
	  "declarationDir": "dist/types",
	  "outDir": "dist",
	  "baseUrl": ".",
	  "paths": {
		"@/*": ["src/*"]
	  }
	},
	"exclude": ["node_modules", "dist"]
  }